<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD" >

    <RelativeLayout
        android:id="@+id/contact_details_center_top_pane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/contact_details_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:paddingRight="10dp"
            android:src="@drawable/blank_contact" />

        <TextView
            android:id="@+id/contact_details_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/contact_details_photo"
            android:layout_below="@+id/contact_details_photo"
            android:text="No. 078"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contact_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/contact_details_photo"
            android:layout_toRightOf="@+id/contact_details_photo"
            android:paddingBottom="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/contact_details_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_details_name"
            android:layout_toRightOf="@+id/contact_details_photo"
            android:paddingBottom="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <View
        android:id="@+id/contact_details_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_below="@+id/contact_details_center_top_pane"
        android:layout_marginTop="2dp"
        android:background="#000" />

</RelativeLayout>